<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/usershow" />

    <AbsoluteLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">
        <eda.eda.RoundImageView
            android:id="@+id/profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/profile"
            imagecontrol:border_outside_color="@color/background_white"
            imagecontrol:border_thickness="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_x="24dp"
            android:layout_y="3dp">
        </eda.eda.RoundImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小k是我"
            android:textColor="#000"
            android:id="@+id/details_name"
            android:layout_x="100dp"
            android:layout_y="16dp"

            android:textSize="@dimen/personal_name_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-16 12:00"
            android:textColor="@color/style_color_primary_dark"
            android:id="@+id/details_time"
            android:layout_x="104dp"
            android:layout_y="40dp"
            android:layout_below="@+id/details_name"
            android:textSize="@dimen/personal_name_size" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/card_favorite_on"

            android:layout_x="243dp"
            android:layout_y="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="235"
            android:textSize="21dp"
            android:textColor="#757575"
            android:id="@+id/shareNO"
            android:layout_x="281dp"
            android:layout_y="29dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.21"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:layout_gravity="center"
            android:textColor="#757575"
            android:id="@+id/style1"
            android:textSize="21dp"
            android:layout_x="26dp"
            android:layout_y="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商业风"
            android:layout_gravity="center"

            android:textColor="#757575"
            android:id="@+id/style2"
            android:textSize="21dp"
            android:layout_x="292dp"
            android:layout_y="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休闲风"
            android:layout_gravity="center"
            android:textColor="#757575"
            android:layout_marginRight="24dp"
            android:id="@+id/style3"
            android:layout_x="167dp"
            android:layout_y="6dp"
            android:textSize="21dp"
            />
    </AbsoluteLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小K是我："
            android:textColor="#212121"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上午搭配的，怎么样，很帅很不错不错吧！"
            android:textColor="#212121"
            android:textSize="18dp"/>
    </LinearLayout>



</LinearLayout>